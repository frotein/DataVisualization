<h1>Select a user ID and attributes to view</h1>

<%= form_tag("/by_attribute/create", method: "get") do %>
  <%= label_tag(:q, "Player id: ") %>
  <%= select_tag(:from, options_for_select(@valid_ids, @user_id), :include_blank => true)%>
  <%= submit_tag("Update") %>
  	<% @names.each_with_index do |n,index| %>
		<%= check_box_tag("display_me_" + n, n) %>
		<%= label_tag(:l,n) %> 
  	<% end %>
<% end %>