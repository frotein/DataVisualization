<div class="wrapper">
	<div class="head pure-g">
	    <h1 class="pure-u-5-5 header">Select a user ID and attributes to view</h1>
	</div>

	<div id="main" class="header">
		<%= form_tag("/by_attribute/create", method: "get") do %>
			<%= label_tag(:q, "Player id: ") %>
			<%= select_tag(:from, options_for_select(@valid_ids, @user_id), :include_blank => true)%>
			<%= submit_tag("Update") %>
			</br>
			
			<div id='attr_select' class="pure-g">
				<% @names.each_with_index do |n,index| %>
					<div class="pure-u-1-8">
						<%= check_box_tag("display_me_" + n, n) %>
						<%= label_tag(:l,n) %> 
					</div>
				<% end %>
		</div>
		<% end %>